<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  <link rel='stylesheet' href='/stylesheets/base.css'>
  <link rel='stylesheet' href='https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css'>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
  <link rel="shortcut icon" type="img/png" href="/media/Favicon.png">

  <meta name="google-signin-client_id"
    content="425892769172-0jb5mo5gm07avnjraabf75pkula2uv65.apps.googleusercontent.com">

  <!-- TODO: Maybe switch these scripts out to local scripts to decrease latency. -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/barba.js/1.0.0/barba.min.js" type="text/javascript"></script>
  <script src='https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js'
    type="text/javascript"></script>
  <script src='javascripts/layout-main.js' type='text/javascript'></script>
  <script src="https://unpkg.com/material-components-web/dist/material-components-web.min.js"
    type='text/javascript'></script>
</head>


<body>

  <!-- Script for Google login -->
  <script async defer src="https://apis.google.com/js/platform.js" onload="this.onload=function(){};initClient()"
    onreadystatechange="if (this.readyState === 'complete') this.onload()"></script>

  <main id="barba-wrapper">

    <ul id="nav-list" class="mdc-list" role="listbox" data-mdc-auto-init="MDCList">

      <a href="/">
        <li id="list-item-overview" class="mdc-list-item" role="option" tabindex="0" aria-selected="true">
          <span class="mdc-list-item__text">Översikt</span>
        </li>
      </a>

      <hr id="small-hr">

      <a href="/news">
        <li id="list-item-news" class="mdc-list-item" role="option" tabindex="0" aria-selected="false">
          <span href="/nyheter" class="mdc-list-item__text">Nyheter</span>
        </li>
      </a>

      <a href="/schedule">
        <li id="list-item-schedule" class="mdc-list-item" aria-selected="false">
          <span href="/schema" class="mdc-list-item__text">Schema</span>
        </li>
      </a>

      <a href="/courses">
        <li id="list-item-courses" class="mdc-list-item" aria-selected="false">
          <span class="mdc-list-item__text">Kurser</span>
        </li>
      </a>

      <a href="/tasks">
        <li id="list-item-tasks" class="mdc-list-item" aria-selected="false">
          <span href="/uppgifter" class="mdc-list-item__text">Uppgifter</span>
        </li>
      </a>

      <a href="/messages">
        <li id="list-item-messages" class="mdc-list-item" aria-selected="false">
          <span href="/meddelanden" class="mdc-list-item__text">Meddelanden</span>
        </li>
      </a>

      <hr>

      <a href="/employees">
        <li id="list-item-employees" class="mdc-list-item" aria-selected="false">
          <span class="mdc-list-item__text">Personallista</span>
        </li>
      </a>

      <a href="/students">
        <li id="list-item-students" class="mdc-list-item" aria-selected="false">
          <span href="/students" class="mdc-list-item__text">Elevgrupper</span>
        </li>
      </a>

    </ul>

    <header id="header" class="mdc-top-app-bar" data-mdc-auto-init="MDCTopAppBar">
      <div id="logo">
        <img id="ludum" src="media/LoggaLudum.png" />
        <div id="school" class="mdc-card">
          <img id="school-logo" src="media/lbs-logo.png">
          <h3 id="school-name">Jönköping</h3>
        </div>

      </div>
      <h3 id="page-title" class="title mdc-typography--headline3">{{pageTitle}}</h3>
      <div class="account" onclick="toggleAccountMenuSurface();">
        <img id="account-image"
          src="https://cdn.discordapp.com/attachments/535771563685969920/552482626670297099/unknown.png">
          <div id="account-menu-surface" class="mdc-card mdc-elevation--z12">
            <h5 id="account-menu-surface-name" class="mdc-typography--headline5">Förnamn Efternamn</h5>
            <h6 id="account-menu-surface-email" class="mdc-typography--subtitle1">förnamn.efternamn@elev.ga.lbs.se</h6>
            <button id="account-menu-surface-settings" class="mdc-icon-button material-icons">settings</button>
            <button id="account-menu-surface-sign-out" class="mdc-button" onclick="signOut();">Logga ut</button>
          </div>
      </div>

    </header>

    <div class="mdc-dialog" role="alertdialog" aria-modal="true" aria-labelledby="my-dialog-title"
      aria-describedby="log-in-dialog-content">
      <div class="mdc-dialog__container">
        <div class="mdc-dialog__surface">
          <!-- Title cannot contain leading whitespace due to mdc-typography-baseline-top() -->
          <h2 class="mdc-dialog__title" id="log-in-dialog-title">Logga in</h2>
          <div class="mdc-dialog__content" id="log-in-dialog-content">
            <!-- Google sign-in button. -->
            <div class="g-signin2" data-onsuccess="onSignIn" tabindex="0"></div>
          </div>
        </div>
      </div>
      <div class="mdc-dialog__scrim"></div>
    </div>

    <div id="page" class="barba-container">
      {{{body}}}
    </div>

  </main>

  <script>Barba.Pjax.start();</script>

</body>

</html>