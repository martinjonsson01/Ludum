            <!-- Initializes material-design components (like the ripple). NOTE: This script needs to run after all html. -->
            <script>
                var lists = document.querySelectorAll('.mdc-list');
                var listsArray = Array.from(lists);
                listsArray.map((list) => {
                    var mdcList = mdc.list.MDCList.attachTo(list);
